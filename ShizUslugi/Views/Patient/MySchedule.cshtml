@using ShizUslugi.ViewModels;
@model AllPatientViewModel;
@{
	Layout = null;
}
<body>
<link rel="stylesheet" href="~/css/tablepage.css" asp-append-version="true" />
	<div class = "navbar">
	<div class = "navbarlogo">
	<img src="https://i.ibb.co/T4TT0KL/Chebur-Uslugi.png" alt="" width = "90"/>
	<a>ШизУслуги</a>
	</div>
		<div class = "button1">
		<a asp-action="Index" class = "buttontext">Главная</a>
	</div>
	<div class = "button2">
		<a asp-action ="MySchedule" class = "buttontext">Расписание</a>
	</div>
	<div class = "button3">
		<a asp-action="MyDoctors" class = "buttontext">Мои врачи</a>
	</div>
		<div class = "button4">
		<a asp-action="MyDiagnoses" class = "buttontext">Мои диагнозы</a>
	</div>
			<div class = "button5">
		<a class = "buttontext">Моя палата</a>
	</div>
	<div class = "mypagenavlink">
	<a asp-action="PersonalCab">Личный кабинет</a>
	</div>
	</div>
<a class ="backbutton">&lt;-Назад</a>
	<p class="Header">Мое Расписание</p>

	<table class="table">
		<thead>
			<tr>
				<th>Начало</th>
				<th>Конец</th>
				<th>Активность</th>
				<th>Имя врача</th>
			</tr>
		<tbody>
				@foreach (Schedule schedule in Model.schedules)
				{
				<tr>
					<td>
							@schedule.starttime
					</td>
					<td>
							@schedule.endtime
					</td>
					<td>
							@schedule.action
					</td>
					<td>
							@schedule.doctor.surname @schedule.doctor.name[0]. @schedule.doctor.thirdname[0].
					</td>
				</tr>
				}
		</tbody>
		</thead>
	</table>
</body>