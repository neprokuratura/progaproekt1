@using ShizUslugi.ViewModels;
@model AllDoctorViewModel;
<div>диагнозы @Model.patient.name</div>
<table class=" = table">
	<thead>
		<tr>
			<th>
			<th>Имя</th>
			<th>Тяжесть</th>
			<th>Описание</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Diagnosis diagnosis in Model.diagnosis)
		{
			<tr>
				<td>
